################################################################################
## Prompt
################################################################################

# Pure prompt with custom version display
pure_prompt_version_info() {
    local versions=""

    # Node version (only in projects with .mise.toml or .node-version)
    if command -v node &> /dev/null && [[ -f ".mise.toml" || -f ".node-version" ]]; then
        local node_ver=$(node -v | sed 's/v//')
        versions+="%F{yellow}⬢ ${node_ver}%f "
    fi

    # Go version (only in projects with go.mod)
    if command -v go &> /dev/null && [[ -f "go.mod" ]]; then
        local go_ver=$(go version | sed -E 's/go version go([0-9]+\.[0-9]+).+/\1/')
        versions+="%F{cyan}󰟓 ${go_ver}%f "
    fi

    [[ -n "$versions" ]] && print -P "$versions"
}

precmd_functions+=(pure_prompt_version_info)

autoload -U promptinit; promptinit
prompt pure

